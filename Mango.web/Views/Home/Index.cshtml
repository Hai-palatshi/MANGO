@model IEnumerable<ProductDto>

<form>
    <div class="container row">
        @foreach (var product in Model)
        {
            <div class="col-12 col-md-6 col-lg-4">
                <div class="p-0 my-3 border rounded">
                    <div class="card h-100">
                        <!-- ✅ גובה אחיד לכל קלף -->
                        <h3 class="card-title text-white-50 text-center py-2">@product.Name</h3>

                        <!-- ✅ תמונה -->
                        <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" />

                        <!-- ✅ גוף הקלף גמיש -->
                        <div class="card-body d-flex flex-column">

                            <!-- מחיר וקטגוריה -->
                            <div class="d-flex justify-content-between py-2">
                                <span class="text-danger" style="font-size:20px;">
                                    @string.Format("{0:c}", product.Price)
                                </span>
                                <span class="badge bg-warning text-white p-2">
                                    @product.CategoryName
                                </span>
                            </div>

                            <!-- תיאור -->
                            <p class="card-text">@Html.Raw(product.Description)</p>

                            <!-- כפתור בתחתית -->
                            <div class="row mt-auto">
                                <div class="col">
                                    <a asp-action="ProductDetails"
                                       asp-route-productId="@product.ProductId"
                                       class="btn btn-success form-control mt-auto">
                                        Details
                                    </a>
                                </div>
                            </div>

                        </div> <!-- סוף card-body -->
                    </div> <!-- סוף card -->
                </div> <!-- סוף border -->
            </div> <!-- col -->
        }
    </div>
</form>
